	<key>beforeRunningCommand</key>
	<string>saveActiveFile</string>
	<key>command</key>
	<string>#!/usr/bin/env bash
. "${TM_BUNDLE_SUPPORT}/etc/functions.sh"

BEHAT_ARG="--no-ansi --dry-run --strict"

# @todo @hack
# Behat will only end on none `0' if strict is flag is
# present, and the feature was skipped (ie dry-run).

output="$(${TM_BEHAT} ${BEHAT_ARG} "${TM_FILEPATH}" 2&gt;&amp;1)"

if [ $? -eq 0 ]
then
  echo "Error"
  while read -r line; do
    if [[ -z $line ]]; then 
      continue
    fi
    echo $line
  done &lt;&lt;&lt;  "$output" | sed '$d' 
else
  echo "Ok"
fi

exit 0</string>
